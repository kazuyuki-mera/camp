%h2 ユーザー情報編集
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "users/shared/error_messages", resource: resource
  .field
    = f.label :姓
    = f.text_field :name_sei, autofocus: true
    = f.label :名
    = f.text_field :name_mei
  .field
    = f.label :セイ
    = f.text_field :name_sei_kana
    = f.label :メイ
    = f.text_field :name_mei_kana
  .field
    = f.label :電話番号
    = f.telephone_field :phone_number
  .field
    = f.label :都道府県
    = f.text_field :prefecture
  .field
    = f.label :市区町村
    = f.text_field :city
  .field
    = f.label :番地
    = f.text_field :block
  .field
    = f.label :建物名
    = f.text_field :building_name
  .field
    = f.label :メールアドレス
    %br
    = f.email_field :email, autofocus: true, autocomplete: "email"
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field
    = f.label :パスワード（変更する場合）
    %i (パスワードを変更しない場合は未入力)
    %br
    = f.password_field :password, autocomplete: "new-password"
    - if @minimum_password_length
      %br
      %em
        = @minimum_password_length
        characters minimum
  .field
    = f.label :パスワード（変更する場合再確認）
    %br
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :パスワード（現在のパスワードを入力してください）
    %i (変更を行うには現在のパスワード入力が必要です)
    %br
    = f.password_field :current_password, autocomplete: "current-password"
  .actions
    = f.submit "更新"
-# %h3 Cancel my account
-# %p
-#   Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
= link_to "Back", :back
