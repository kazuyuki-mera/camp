= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .new_user__heading
    会員登録
  = render "users/shared/error_messages", resource: resource
  .form-row
    .form-group.col-md-6
      = f.label :姓（必須）
      = f.text_field :name_sei, class: 'form-control', autofocus: true
    .form-group.col-md-6
      = f.label :名（必須）
      = f.text_field :name_mei, class: 'form-control'
  .form-row
    .form-group.col-md-6
      = f.label :セイ（必須）
      = f.text_field :name_sei_kana, class: 'form-control'
    .form-group.col-md-6
      = f.label :メイ（必須）
      = f.text_field :name_mei_kana, class: 'form-control'
  .form-group
    = f.label :電話番号（必須）
    = f.telephone_field :phone_number, class: 'form-control'
  .form-row
    .form-group.col-md-6
      = f.label :都道府県（必須）
      = f.text_field :prefecture, class: 'form-control'
    .form-group.col-md-6
      = f.label :市区町村（必須）
      = f.text_field :city, class: 'form-control'
  .form-row
    .form-group.col-md-6
      = f.label :番地
      = f.text_field :block, class: 'form-control'
    .form-group.col-md-6
      = f.label :建物名
      = f.text_field :building_name, class: 'form-control'
  .form-group
    = f.label :メールアドレス（必須）
    = f.email_field :email, class: 'form-control', autocomplete: 'email'
  .form-group
    = f.label :パスワード（必須）
    = f.password_field :password, class: 'form-control', autocomplete: 'new-password'
  .form-group
    = f.label :パスワード確認（必須）
    = f.password_field :password_confirmation, class: 'form-control', autocomplete: 'new-password'
  = f.submit '会員登録する', class: 'btn btn-primary btn-lg btn-block form-group'
  = link_to 'ログインはこちらから', new_session_path(resource_name)
-# = render "users/shared/links"